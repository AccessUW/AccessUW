<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <views.VScroll
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" android:id="@+id/vScroll">
        <views.HScroll
            android:id="@+id/hScroll"
            android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/mapView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/uw_campus_map"
                    android:contentDescription="@string/main_campus_map_desc" />

                <ImageView
                    android:id="@+id/routeView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignTop="@+id/mapView"
                    android:layout_alignBottom="@+id/mapView"
                    android:layout_alignLeft="@+id/mapView"
                    android:layout_alignRight="@+id/mapView"
                    android:scaleType="fitXY"
                    android:layout_gravity="top"
                    android:contentDescription="@string/current_route"/>
            </RelativeLayout>

        </views.HScroll>
    </views.VScroll>

</LinearLayout>